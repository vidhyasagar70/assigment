{
    "groups": [
      {
        "id": 1,
        "name": "Arathupal",
        "subGroups": [
          {
            "id": 1,
            "name": "Kadavul Vaazhthu (Praise of God)",
            "kurals": [
              {
                "id": 1,
                "number": 1,
                "text": "அகர முதல எழுத்தெல்லாம் ஆதி \n பகவன் முதற்றே உலகு."
              },
              {
                "id": 2,
                "number": 2,
                "text": "கற்றதனால் ஆய பயனென்கொல் வாலறிவன் \n நற்றாள் தொழாஅர் எனின்."
              }
            ]
          },
          {
            "id": 2,
            "name": "Vaan Sirappu (Glory of Rain)",
            "kurals": [
              {
                "id": 3,
                "number": 1,
                "text": "விண்இன்று பொய்ப்பின் விரிநீர் வியனுலகம்\n தண்இன்று தீதுண்டு உலகு."
              },
              {
                "id": 4,
                "number": 2,
                "text": "நீர்இன்று அமையாது உலகெனின் யார்யார்க்கும்\n வான்இன்று அமையாது ஒழுக்கு."
              }
            ]
          }
        ]
      },
      {
        "id": 2,
        "name": "Porutpal",
        "subGroups": [
          {
            "id": 3,
            "name": "Arasu (Kingship)",
            "kurals": [
              {
                "id": 5,
                "number": 1,
                "text": "இயல்வினையும் ஈட்டலுங் காத்தலும் காத்த\n வகுத்தலும் வல்லது அரசு."
              },
              {
                "id": 6,
                "number": 2,
                "text": "அரசியல் செய்வார் அளக்குவார்மேற் கொள்ள\n அளவல்ல செய்யார் செயல்."
              }
            ]
          },
          {
            "id": 4,
            "name": "Amaichchu (Ministers)",
            "kurals": [
              {
                "id": 7,
                "number": 1,
                "text": "தெரிதல் தலைப்படுதல் தேர்வார்மாட்டும்\n உறுதல் உறுதுஅஞ்சி நிறுத்தல்."
              },
              {
                "id": 8,
                "number": 2,
                "text": "அறிவுடைமை ஆற்றல் அகழ்ந்தறிதல் கற்ற\n செறிவுடைமை தேர்வு."
              }
            ]
          }
        ]
      },
      {
        "id": 3,
        "name": "Kamathupal",
        "subGroups": [
          {
            "id": 5,
            "name": "Kalaviyal (Love Before Marriage)",
            "kurals": [
              {
                "id": 9,
                "number": 1,
                "text": "உறிவு கொண்டார் காதல் விளையாடல்\n முறிவிடத்தும் மிக்குச்சிறப்பு."
              },
              {
                "id": 10,
                "number": 2,
                "text": "அன்பின் தலைப்பிரியார் காதலர் காதலின்\n வெய்து நமைத்தவர்க்கு இல்லை."
              }
            ]
          },
          {
            "id": 6,
            "name": "Karpiyal (Married Love)",
            "kurals": [
              {
                "id": 11,
                "number": 1,
                "text": "மணத்தக்க மாலையும் துன்னல் மணவல்ல\n மாணிழை யாளும் புகல்."
              },
              {
                "id": 12,
                "number": 2,
                "text": "மனத்துக்கண் மாதர் இகழ்ச்சி அவமதித்து\n நனித்தொக்க நேர்வதுண்டு."
              }
            ]
          }
        ]
      }
    ]
  }
  